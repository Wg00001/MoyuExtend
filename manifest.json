{
  "manifest_version": 3,
  "name": "MoyuReader",
  "version": "1.0",
  "permissions": ["activeTab", "storage","scripting"],
  "action": {
    "default_popup": "dist/view/popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": [ "dist/view/newPage.html"],
      "matches":["<all_urls>"]
    },
    {
      "resources": ["resource/right.png","resource/top.png","resource/left.png"],
      "matches":["<all_urls>"]
    }
  ],
"content_scripts": [
    {
    "matches": [
      "http://127.0.0.1",
      "http://localhost",
      "https://juejin.cn",
      "https://www.zhihu.com"
    ],
    "js": ["dist/view_model/content.js"],
      "css": ["dist/view/new_page.css"]
    }
]
}
